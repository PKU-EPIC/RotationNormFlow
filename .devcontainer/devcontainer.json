{
    "name": "PyTorch 3D Dev Container",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus",
        "all",
        "--ipc=host"
    ],
    "forwardPorts": [],
    "postCreateCommand": "pip install -r requirements.txt torch-tb-profiler && /bin/bash download_modelnet10-SO3-dataset.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    }
}
